<Project Sdk="Microsoft.NET.Sdk">

  <ItemGroup>
    <ProjectReference Include="..\CrunchCore\CrunchCore.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <Target Name="CopyDLLs" AfterTargets="Build">
    <Message Text="Copy $(TargetDir)$(ProjectName).dll;$(TargetDir)$(ProjectName).pdb" Importance="High" />
    <Message Text="To $(USERPROFILE)/Documents/$(SolutionName)/Extensions/$(ProjectName)" Importance="High" />
    <Copy
      SourceFiles="$(TargetDir)$(ProjectName).dll;$(TargetDir)$(ProjectName).pdb"
      DestinationFolder="$(USERPROFILE)/Documents/$(SolutionName)/Extensions/$(ProjectName)" />
  </Target>

</Project>
