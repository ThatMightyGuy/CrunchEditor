<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CrunchEditor.Core.MainWindow"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        Title="Crunch">

        <Panel Width="{Binding Window.Width}" Height="{Binding Window.Height}">
                <!-- <DockPanel VerticalAlignment="Top" HorizontalAlignment="Stretch" IsHitTestVisible="False">
                        <Menu Name="MenuDockPanel" DockPanel.Dock="Top">
                                
                        </Menu>
                </DockPanel> -->
                <ScrollViewer>
                        <StackPanel Name="MenuBar" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="50" Spacing="5">
                                <Rectangle Fill="Red" Height="44"/>
                                <Rectangle Fill="Blue" Height="44"/>
                                <Rectangle Fill="Green" Height="44"/>
                                <Rectangle Fill="Orange" Height="44"/>
                        </StackPanel>
                </ScrollViewer>
        </Panel>
</Window>
